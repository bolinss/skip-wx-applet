/**index.wxss**/
.page-wrap .list .item {
  display: flex;
  margin-top: 24rpx;
  padding: 24rpx;
  background-color: #fff;
}
.page-wrap .list .item .img {
  width: 136rpx;
  height: 136rpx;
  margin-right: 24rpx;
}
.page-wrap .list .item .title {
  width: 380rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 6rpx 0;
}
.page-wrap .list .item .title .text {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 400rpx;
}
.page-wrap .list .item .title .status {
  font-size: 28rpx;
  font-weight: 400;
  color: #ffb400;
  line-height: 32rpx;
}
.page-wrap .list .item .result {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
  padding: 6rpx 0;
}
.page-wrap .list .item .result .status {
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 37rpx;
}
.page-wrap .list .item .result .van-button {
  height: 44rpx;
  background: #498cff;
  border-radius: 44rpx;
}
.page-wrap .list .item .result .van-button .van-button__text {
  font-size: 24rpx;
  font-weight: 400;
  color: #ffffff;
  line-height: 33rpx;
}
.page-wrap .list .more {
  text-align: center;
  margin-top: 24rpx;
  color: #999;
}
