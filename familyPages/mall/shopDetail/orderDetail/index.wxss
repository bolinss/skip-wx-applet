/**index.wxss**/
page {
  height: 100%;
}
.page-wrap {
  position: relative;
  height: 100%;
  width: 100%;
}
.page-wrap .address-wrapper {
  padding: 24rpx;
  background-color: #fff;
}
.page-wrap .address-wrapper .title {
  font-size: 26rpx;
  font-weight: 500;
  color: #999999;
  line-height: 64rpx;
  margin-bottom: 10rpx;
}
.page-wrap .address-wrapper .header {
  display: flex;
  margin-bottom: 20rpx;
  justify-content: space-between;
}
.page-wrap .address-wrapper .header .userinfo {
  display: flex;
  font-weight: 700;
}
.page-wrap .address-wrapper .header .userinfo .name {
  margin-right: 24rpx;
}
.page-wrap .address-wrapper .header .userinfo .name,
.page-wrap .address-wrapper .header .userinfo .phone {
  color: #333;
  font-size: 30rpx;
}
.page-wrap .address-wrapper .address {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 32rpx;
  margin-bottom: 12rpx;
}
.page-wrap .produce-detail {
  display: flex;
  padding: 24rpx;
  background-color: #fff;
  margin-top: 24rpx;
}
.page-wrap .produce-detail .img {
  width: 136rpx;
  height: 136rpx;
  margin-right: 24rpx;
}
.page-wrap .produce-detail .info {
  flex: 1;
}
.page-wrap .produce-detail .info .title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  line-height: 45rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 450rpx;
}
.page-wrap .produce-detail .info .price-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-wrap .produce-detail .info .price-info .price {
  font-size: 36rpx;
  font-weight: 500;
  color: #ec5063;
  line-height: 50rpx;
}
.page-wrap .produce-detail .info .price-info .price .money {
  font-weight: 700;
}
.page-wrap .produce-detail .info .price-info .price .plus {
  margin: 0 4rpx;
}
.page-wrap .produce-detail .info .price-info .price .unit {
  margin-left: 4rpx;
  font-size: 30rpx;
}
.page-wrap .produce-detail .info .price-info .num {
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
}
.page-wrap .produce-detail .status {
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 37rpx;
}
.page-wrap .order-info {
  padding: 24rpx;
  margin-top: 24rpx;
  background-color: #fff;
}
.page-wrap .order-info .title {
  font-size: 26rpx;
  font-weight: 500;
  color: #999999;
  line-height: 64rpx;
  margin-bottom: 20rpx;
}
.page-wrap .order-info-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}
.page-wrap .order-info-item .label {
  color: #666666;
}
.page-wrap .order-info-item.real-price {
  color: #ec5063;
}
.page-wrap .order-info-item.real-price .label {
  color: #ec5063;
}
.page-wrap .logistics-info {
  margin-top: 24rpx;
  background-color: #fff;
}
.page-wrap .logistics-info .van-cell {
  padding: 24rpx;
}
.page-wrap .promet {
  width: 702rpx;
  height: 80rpx;
  background: #fff5d4;
  border-radius: 8px;
  font-size: 26rpx;
  font-weight: 400;
  color: #ffb400;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 48rpx auto;
}
.page-wrap .promet .van-icon {
  margin-right: 16rpx;
  font-size: 30rpx;
}
.page-wrap .btn-wrap {
  display: flex;
  justify-content: center;
  margin-bottom: 64rpx;
  margin-top: 100rpx;
  width: 100%;
}
.page-wrap .btn-wrap .btn-cancel {
  margin-right: 48rpx;
}
.page-wrap .btn-wrap .btn-cancel .van-button {
  background: #e2e2e2;
}
.page-wrap .btn-wrap .van-button {
  width: 220rpx;
  height: 80rpx;
  border-radius: 44rpx;
}
