.taskList {
  padding: 24rpx;
}
.taskList .tabBox {
  width: 90%;
  display: flex;
  border: 4rpx solid #333;
  margin: 0 auto;
  border-radius: 10rpx;
}
.taskList .tabBox .tab {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.taskList .tabBox .tab:last-child {
  border-left: 4rpx solid #333;
}
.taskList .tabBox .on {
  background-color: #333;
  color: #fff;
}
.taskList .content {
  background-color: #fff;
  padding: 24rpx;
  margin-top: 24rpx;
}
.taskList .content .box {
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}
.taskList .content .box:last-child {
  border-bottom: 0;
}
.taskList .content .box .titleBox {
  font-size: 30rpx;
  display: flex;
}
.taskList .content .box .titleBox .title {
  flex: 1;
}
.taskList .content .box .titleBox .status {
  color: #333330;
}
.taskList .content .box .titleBox .optBox {
  display: flex;
  align-items: center;
}
.taskList .content .box .titleBox .optBox .btn {
  font-size: 26rpx;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.taskList .content .box .titleBox .optBox .btn text {
  margin-left: 4rpx;
}
.taskList .content .box .timeBox {
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}
