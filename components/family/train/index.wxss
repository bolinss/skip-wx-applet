/**index.wxss**/
.page-wrap {
  padding: 24rpx 24rpx;
}
.page-wrap .train-info-wrap {
  padding: 24rpx;
  padding-bottom: 0;
  background-color: #fff;
}
.page-wrap .train-info-wrap .user-info {
  display: flex;
  justify-content: space-between;
}
.page-wrap .train-info-wrap .user-info .name-wrap {
  display: flex;
  align-items: center;
}
.page-wrap .train-info-wrap .user-info .name-wrap .uner {
  width: 38rpx;
  height: 38rpx;
}
.page-wrap .train-info-wrap .user-info .name-wrap .name {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
}
.page-wrap .train-info-wrap .user-info .change-user {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}
.page-wrap .train-info-wrap .train-content {
  padding: 30rpx 0 0 0;
}
.page-wrap .train-info-wrap .train-content .section {
  display: flex;
}
.page-wrap .train-info-wrap .train-content .section .left {
  flex: 1;
}
.page-wrap .train-info-wrap .train-content .section .left .title {
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 40rpx;
}
.page-wrap .train-info-wrap .train-content .section .left .ka {
  display: flex;
}
.page-wrap .train-info-wrap .train-content .section .left .ka-item {
  margin-right: 80rpx;
}
.page-wrap .train-info-wrap .train-content .section .left .ka-item:last-child {
  margin-right: 0;
}
.page-wrap .train-info-wrap .train-content .section .left .ka-item .txt {
  font-size: 22rpx;
  color: #666666;
  margin-bottom: 12rpx;
}
.page-wrap .train-info-wrap .train-content .section .left .ka-item .num-wrap {
  display: flex;
  align-items: flex-end;
}
.page-wrap .train-info-wrap .train-content .section .left .ka-item .num-wrap .num {
  font-size: 44rpx;
  font-weight: 700;
  line-height: 50rpx;
  color: #333333;
  margin-right: 10rpx;
}
.page-wrap .train-info-wrap .train-content .section .left .ka-item .num-wrap .unit {
  font-size: 20rpx;
  color: #999999;
}
.page-wrap .train-info-wrap .train-content .section .right {
  display: flex;
  align-items: center;
}
.page-wrap .train-info-wrap .train-content .section .right-content {
  position: relative;
  width: 154rpx;
  height: 154rpx;
  background: linear-gradient(340deg, #2877ff 0%, #5996ff 100%);
  box-shadow: 0px 16rpx 16rpx 0px rgba(66, 136, 255, 0.2);
  border-radius: 98rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.page-wrap .train-info-wrap .train-content .section .right-content .num {
  font-size: 44rpx;
  font-weight: 700;
}
.page-wrap .train-info-wrap .train-content .section .right-content .round {
  width: 110rpx;
  height: 50rpx;
  background: #ffffff;
  border-radius: 50%;
  opacity: 0.07;
  position: absolute;
  top: 114rpx;
}
.page-wrap .train-info-wrap .train-content .section-prev .left .num-wrap {
  font-size: 32rpx;
}
.page-wrap .train-info-wrap .train-content .section-prev .left .num-wrap .down {
  font-weight: 900;
  color: #30f079;
}
.page-wrap .train-info-wrap .train-content .section-prev .left .num-wrap .up {
  transform: rotate(180deg);
  font-weight: 900;
  color: #ec5063;
}
.page-wrap .train-info-wrap .train-content .section-prev .right-content {
  position: relative;
  background: linear-gradient(360deg, #35c894 0%, #3bd6a0 100%);
  flex-direction: column;
}
.page-wrap .train-info-wrap .train-content .section-prev .right-content .num-wrap {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.page-wrap .train-info-wrap .train-content .section-prev .right-content .more {
  display: flex;
  font-size: 20rpx;
  color: #c6f0e1;
}
.page-wrap .train-info-wrap .train-content .section-prev .right-content .round {
  width: 110rpx;
  height: 50rpx;
  background: #ffffff;
  border-radius: 50%;
  opacity: 0.1;
  position: absolute;
  top: 125rpx;
}
.page-wrap .train-info-wrap .train-content .open {
  color: #cccccc;
  font-size: 24rpx;
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  padding-top: 50rpx;
  padding-bottom: 24rpx;
}
.page-wrap .train-info-wrap .train-content .open .arrow {
  width: 24rpx;
  height: 24rpx;
}
.page-wrap .train-info-wrap .train-content .open .arrow-up {
  width: 24rpx;
  height: 24rpx;
  transform: rotate(180deg);
}
.page-wrap .notify {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}
.page-wrap .notify .notify-content {
  height: 20px;
  overflow: hidden;
}
.page-wrap .ad-1 {
  margin: 24rpx 0;
}
.page-wrap .ad-1 .loading {
  width: 100%;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.page-wrap .ad-1 .img {
  height: 220rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.page-wrap .ad-2 {
  display: flex;
  height: 400rpx;
}
.page-wrap .ad-2 .img {
  margin-right: 24rpx;
  height: 100%;
}
.page-wrap .ad-2 .img:last-child {
  margin-right: 0;
}
.page-wrap .ad-3 {
  margin: 24rpx 0;
}
.page-wrap .ad-3 .loading {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.page-wrap .ad-3 .img {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
