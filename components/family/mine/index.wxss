/**index.wxss**/
.page-wrap .header {
  position: relative;
  padding: 26rpx 45rpx 130rpx 45rpx;
  background-color: #4f90ff;
}
.page-wrap .header-inner {
  display: flex;
  position: relative;
  justify-content: space-between;
}
.page-wrap .header .userinfo {
  display: flex;
}
.page-wrap .header .userinfo .avatar {
  width: 126rpx;
  height: 126rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.page-wrap .header .userinfo .name {
  height: 100%;
}
.page-wrap .header .userinfo .name .txt {
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
  margin-bottom: 26rpx;
}
.page-wrap .header .userinfo .name .id {
  font-size: 28rpx;
  font-weight: 400;
  color: #a6c6fc;
}
.page-wrap .header .icon {
  color: #ffffff;
}
.page-wrap .header .point {
  position: absolute;
  width: 700rpx;
  box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.05);
  background-color: #ffffff;
  height: 166rpx;
  left: 24rpx;
  bottom: -80rpx;
  display: flex;
  border-radius: 8rpx;
}
.page-wrap .header .point .item {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.page-wrap .header .point .item .num {
  font-size: 44rpx;
  font-weight: 400;
  color: #222222;
}
.page-wrap .header .point .item .unit {
  margin-top: 16rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}
.page-wrap .header .point .item .scan {
  font-size: 60rpx;
}
.page-wrap .body {
  margin-top: 104rpx;
}
.page-wrap .body .group {
  margin-bottom: 24rpx;
  background-color: #ffffff;
}
.page-wrap .body .group .item-wrap {
  padding: 0 24rpx;
}
.page-wrap .body .group .item-wrap .item {
  display: flex;
  justify-content: space-between;
  padding: 27rpx 0;
  border-bottom: 2rpx solid #ededed;
}
.page-wrap .body .group .item-wrap .item .txt {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
}
